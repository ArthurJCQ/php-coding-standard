<?xml version="1.0"?>
<ruleset name="Arty Coding Standard"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../../vendor/squizlabs/php_codesniffer/phpcs.xsd">
    <file>src</file>
    <file>tests</file>

    <exclude-pattern>tests/ArtyCodingStandard/*/data/*</exclude-pattern>

    <config name="installed_paths" value="../../slevomat/coding-standard,../../../src"/>

    <rule ref="./lib/phpcs/rules/base.xml"/>
    <rule ref="./lib/phpcs/rules/arty.xml"/>
    <rule ref="./lib/phpcs/rules/psr.xml"/>
    <rule ref="./lib/phpcs/rules/slevomat.xml"/>
</ruleset>
