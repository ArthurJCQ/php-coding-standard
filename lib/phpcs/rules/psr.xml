<?xml version="1.0"?>
<ruleset name="Arty" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../vendor/squizlabs/php_codesniffer/phpcs.xsd">
    <!-- Import PSR-1 coding standard -->
    <rule ref="PSR1"/>

    <!-- Import PSR-2 coding standard -->
    <rule ref="PSR2">
        <exclude name="PSR2.ControlStructures.ControlStructureSpacing.SpacingAfterOpenBrace" />
    </rule>

    <!-- Import PSR-12 coding standard -->
    <rule ref="PSR12"/>
</ruleset>
